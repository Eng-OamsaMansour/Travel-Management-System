    private void show_loationActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        if (this.location_id.getText().equals("")) {
            JOptionPane.showMessageDialog(rootPane, "Please Enter Location Number");
        } else {
            try {
                OracleDataSource ods = new OracleDataSource();
                ods.setURL("jdbc:oracle:thin:@localhost:1521:xe");
                ods.setUser("c##TMS");
                ods.setPassword("123456");
                Connection con = ods.getConnection();
                Statement stmt = con.createStatement();
                ResultSet result = stmt.executeQuery("select * from LOCATIONS where LOCATION_ID = '" + location_id.getText().toUpperCase() + "'");
                result.next();
                jTextArea2.append("Country: " + result.getString(3) + "\n");
                jTextArea2.append("City: " + result.getString(3) + "\n");
                jTextArea2.append("Required document: " + result.getString(3) + "\n");
                con.close();
            } catch (SQLException ex) {
                Logger.getLogger(searchbylocation.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
    }                                            

    private void show_hotelActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        if (this.hotel_id.getText().equals("")) {
            JOptionPane.showMessageDialog(rootPane, "Please Enter Hotel Number");
        } else {
            try {
                OracleDataSource ods = new OracleDataSource();
                ods.setURL("jdbc:oracle:thin:@localhost:1521:xe");
                ods.setUser("c##TMS");
                ods.setPassword("123456");
                Connection con = ods.getConnection();
                Statement stmt = con.createStatement();
                ResultSet result = stmt.executeQuery("select * from HOTEL where HOTEL_ID = '" + hotel_id.getText().toUpperCase() + "'");
                result.next();
                jTextArea1.append("Hotel Name: " + result.getString(2) + "\n");
                jTextArea1.append("Hotel Stars Number: " + result.getString(3) + "\n");;
                con.close();
            } catch (SQLException ex) {
                Logger.getLogger(searchbylocation.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
    }                                          

